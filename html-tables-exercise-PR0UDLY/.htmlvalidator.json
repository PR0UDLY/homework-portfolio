{
    "extends": [
        "html-validate:recommended"
    ],
    "rules": {
        "no-inline-style": "off",
        "void-style": [
            "off",
            {
                "style": "selfclose"
            }
        ],
        "no-self-closing": "off",
        "no-trailing-whitespace": "off",
        "whitespace": "off",
        "no-deprecated-attr": "off",
        "button-type": "off",
        "no-raw-characters": "off"
    }
}